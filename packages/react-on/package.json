{
  "name": "react-on",
  "description": "Simple React instrumentation library for tracking user interactions",
  "type": "module",
  "homepage": "https://gkurt.com/react-on/",
  "repository": {
    "type": "git",
    "url": "http://github.com/KurtGokhan/react-on"
  },
  "keywords": ["react", "tracking", "analytics", "instrumentation"],
  "version": "1.0.1",
  "license": "MIT",
  "author": {
    "name": "Gokhan Kurt",
    "email": "krtgkn@gmail.com",
    "url": "https://github.com/KurtGokhan"
  },
  "files": ["README.md", "dist"],
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./middlewares": {
      "default": "./dist/middlewares/index.js",
      "require": "./dist/middlewares/index.cjs"
    }
  },
  "scripts": {
    "tsc": "tsc -p tsconfig.app.json",
    "start": "npm run tsc -- --watch --incremental",
    "build": "npm run clean && npm run tsc",
    "clean": "rimraf dist && rimraf tsconfig.app.tsbuildinfo",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "prepare": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "18.2.69",
    "@types/react-dom": "^18",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^24.0.0",
    "jsx-middlewares": "^1.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "jsx-middlewares": ">=1",
    "react": ">=18"
  },
  "peerDependenciesMeta": {
    "jsx-middlewares": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  }
}
