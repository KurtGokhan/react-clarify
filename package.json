{
  "name": "react-on-workspace",
  "workspaces": ["packages/*", "examples/*", "website"],
  "scripts": {
    "check": "biome check --apply .",
    "prepare": "husky"
  },
  "volta": {
    "node": "20.11.1",
    "npm": "10.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "lint-staged": {
    "*": [
      "biome check --apply --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
